      <Footer />
      
      {/* í”Œë¡œíŒ… ë²„íŠ¼ */}
      <Button
        variant="gradient"
        size="icon"
        className="fixed bottom-8 right-8 w-14 h-14 rounded-full shadow-lg"
        aria-label="êµ¬ë… ì¶”ê°€"
      >
        <Plus className="w-6 h-6" />
      </Button>
    </div>
  )
}
